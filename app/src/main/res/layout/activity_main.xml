<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaoxin.example.com.hello_android.MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "30%"
        android:gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent = "10%"
        android:text="@string/namiprogress" />

    <!-- 热门电影 -->
    <Button
        style="@style/btn"
        android:id="@+id/moive"
        android:layout_below="@id/tv"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "35%"
        app:layout_marginTopPercent = "2%"
        android:text="@string/movies"

        />

    <!-- 股票 -->
    <Button
        style="@style/btn"
        android:id="@+id/gupiao"
        android:layout_below="@id/moive"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "35%"
        app:layout_marginTopPercent = "1.5%"
        android:text="@string/gupiao"
        />

     <!-- 阅读器 -->
    <Button
        style="@style/btn"
        android:id="@+id/reader"
        android:layout_below="@id/gupiao"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "35%"
        app:layout_marginTopPercent = "1.5%"
        android:text="@string/reader"
        />

    <!-- 新闻 -->
    <Button
        style="@style/btn"
        android:id="@+id/news"
        android:layout_below="@id/reader"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "35%"
        app:layout_marginTopPercent = "1.5%"
        android:text="@string/news"
        />

    <!-- 毕业设计 -->
    <Button
        style="@style/btn"
        android:id="@+id/gDesign"
        android:layout_below="@id/news"
        app:layout_heightPercent = "10%"
        app:layout_widthPercent = "35%"
        app:layout_marginTopPercent = "1.5%"
        android:text="@string/gDesign"
        />



</android.support.percent.PercentRelativeLayout>
